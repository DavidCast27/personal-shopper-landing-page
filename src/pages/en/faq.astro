---
import SiteLayout from "../../layouts/SiteLayout.astro";
import FAQBlock from "@/components/blocks/faqs-2.astro";
import { getFaq } from '@/lib/content';
import { stripMarkdown } from '@/lib/markdown';

const items = (await getFaq('en')).map((q) => ({
  title: (q.frontmatter.question as string) ?? q.slug,
  description: stripMarkdown(q.body || ''),
}));
---

<SiteLayout lang="en" title={`FAQ â€“ Personal Shopper`} description={'Frequently asked questions'}>
  <FAQBlock items={items}>
    <h1>FAQ</h1>
    <p>Answers to common questions.</p>
  </FAQBlock>
</SiteLayout>
