---
import SiteLayout from "../../layouts/SiteLayout.astro";
import ServicesBlock from "@/components/blocks/services-7.astro";
import { getServices } from "@/lib/content";

const placeholderImage = "/uploads/image-placeholder.daj0efyq_29eycw.webp";

const services = await getServices("fr");
const items = services.map((s) => ({
  id: s.slug,
  href: `#${s.slug}`,
  title: s.title,
  description: s.description,
  image: {
    src: s.image || placeholderImage,
    alt: s.title,
    width: 256,
    height: 256,
  },
  links: [{ text: "Contact", href: "/fr/contact" }],
}));
---

<SiteLayout
  lang="fr"
  title={`Services – Personal Shopper`}
  description={"Nos services"}
>
  <ServicesBlock items={items}>
    <h1>Services</h1>
    <p>Découvrez notre offre adaptée à vos besoins.</p>
  </ServicesBlock>
</SiteLayout>
