---
import SiteLayout from '../../layouts/SiteLayout.astro';
import { Section, SectionProse } from '@/components/ui/section';
import { renderMarkdown } from '@/lib/markdown';
import { getPage } from '@/lib/content';

const page = await getPage('fr', 'about');
const fm = page.frontmatter as { title?: string; description?: string };
---

<SiteLayout lang="fr" title={`${fm.title ?? 'À propos'} – Personal Shopper`} description={fm.description ?? 'À propos de nos services'}>
  <Section>
    <SectionProse>
      <h1>{fm.title ?? 'À propos'}</h1>
      <div class="contents" set:html={renderMarkdown(page.body || '')} />
    </SectionProse>
  </Section>
</SiteLayout>
