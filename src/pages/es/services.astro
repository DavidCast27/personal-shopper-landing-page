---
import SiteLayout from "../../layouts/SiteLayout.astro";
import ServicesBlock from "@/components/blocks/services-7.astro";
import { getServices } from "@/lib/content";

const placeholderImage = "/uploads/image-placeholder.daj0efyq_29eycw.webp";

const services = await getServices("es");
const items = services.map((s) => ({
  id: s.slug,
  href: `#${s.slug}`,
  title: s.title,
  description: s.description,
  image: {
    src: s.image || placeholderImage,
    alt: s.title,
    width: 256,
    height: 256,
  },
  links: [{ text: "Contacto", href: "/es/contact" }],
}));
---

<SiteLayout
  lang="es"
  title={`Servicios â€“ Personal Shopper`}
  description={"Nuestros servicios"}
>
  <ServicesBlock items={items}>
    <h1>Servicios</h1>
    <p>Conoce nuestra oferta adaptada a ti.</p>
  </ServicesBlock>
</SiteLayout>
