---
import SiteLayout from "../../layouts/SiteLayout.astro";
import FAQBlock from "@/components/blocks/faqs-3.astro";
import EmptyState from "@/components/blocks/empty-state-1.astro";
import { getFaq, getPage } from "@/lib/content";
import { stripMarkdown, renderMarkdown } from "@/lib/text";
import { t } from "@/lib/i18n";
import { staticPathsForLang, type Lang } from "@/lib/lang";

export const prerender = true;

export function getStaticPaths() { return staticPathsForLang() }

const { lang } = Astro.params as { lang: Lang };
const items = (await getFaq(lang)).map((q) => ({
  title: q.question,
  description: stripMarkdown(q.body || ""),
}));
const page = await getPage(lang, 'faq');
const fm = page.frontmatter as { title?: string; description?: string };
---

<SiteLayout
  lang={lang}
  title={fm.title}
  description={fm.description}
>
  <FAQBlock items={items}>
    {fm.title && <h1>{fm.title}</h1>}
    {page.body && <div class="contents" set:html={renderMarkdown(page.body)} />}
  </FAQBlock>
  {items.length === 0 && (
    <EmptyState
      icon="help-circle"
      title={t(lang, 'empty.faq.title')}
      description={t(lang, 'empty.faq.description')}
    />
  )}
</SiteLayout>
